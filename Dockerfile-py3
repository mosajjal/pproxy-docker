FROM alpine:edge
LABEL maintainer "Alireza Mosajjal <hi@n0p.me>"

RUN apk add --no-cache  py3-pycryptodome --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing/
RUN apk add --no-cache py3-pip  --repository http://dl-cdn.alpinelinux.org/alpine/edge/testing/
RUN pip3 install --no-cache-dir pproxy

ENTRYPOINT ["pproxy"]
